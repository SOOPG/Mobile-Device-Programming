<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <ImageView
        android:id="@+id/imageApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:contentDescription="Main Page App Logo"
        android:src="@drawable/dag_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pageTitle_ResetPasswordPage"
        android:layout_width="189dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:text="Reset Password"
        android:textColor="#121212"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageApp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/userLoginEmail"
        android:layout_width="313dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_box"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:hint="Your Email"
        android:inputType="textEmailAddress"
        android:textColor="#121212"
        android:textColorHint="#80121212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle_ResetPasswordPage" />

    <EditText
        android:id="@+id/userNewPassword"
        android:layout_width="311dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/background_box"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:hint="Your New Password"
        android:inputType="textPassword"
        android:textColor="#121212"
        android:textColorHint="#80121212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userLoginEmail" />

    <EditText
        android:id="@+id/userNewConfirmPassword"
        android:layout_width="311dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/background_box"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#121212"
        android:textColorHint="#80121212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNewPassword" />

    <TextView
        android:id="@+id/HaveAccount"
        android:layout_width="88dp"
        android:layout_height="14dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:text="Have an Account?"
        android:textColor="#121212"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNewConfirmPassword" />

    <TextView
        android:id="@+id/signUpTextNavigationToLoginPage"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="148dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:onClick="onLoginTextClicked"
        android:text="Login Here"
        android:textColor="#1F83F8"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/HaveAccount"
        app:layout_constraintTop_toBottomOf="@+id/userNewConfirmPassword"
        tools:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>