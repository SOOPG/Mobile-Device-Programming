<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDepartmentInfoActivity">

    <!-- Return button -->
    <ImageView
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onReturnClicked"
        android:src="@drawable/previous_page_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Department Head Name Input Field -->
    <EditText
        android:id="@+id/editTextDepartmentHeadName"
        android:layout_width="248dp"
        android:layout_height="54dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/background_box"
        android:gravity="center"
        android:hint="Department Head Name"
        android:inputType="textPersonName"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/returnButton" />

    <!-- Contact Number Input Field -->
    <EditText
        android:id="@+id/editTextContactNumber"
        android:layout_width="244dp"
        android:layout_height="61dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/background_box"
        android:gravity="center"
        android:hint="Contact Number"
        android:inputType="phone"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDepartmentHeadName" />

    <TextView
        android:id="@+id/buttonAdd"
        android:layout_width="69dp"
        android:layout_height="41dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/background_box"
        android:clickable="true"
        android:onClick="onEditDepartmentClicked"
        android:gravity="center"
        android:text="Edit"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextContactNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>