<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/imageApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:src="@drawable/dag_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Sign-up Page App Logo" />

    <TextView
        android:id="@+id/pageTitle_SignUpPage"
        android:layout_width="102dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="#121212"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageApp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/userSignUpFirstName"
        android:layout_width="127dp"
        android:layout_height="42dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/background_box"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="#121212"
        android:textColorHint="#80121212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle_SignUpPage" />

    <EditText
        android:id="@+id/userSignUpLastName"
        android:layout_width="127dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/background_box"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColor="#121212"
        android:textColorHint="#80121212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle_SignUpPage" />

    <EditText
        android:id="@+id/userSignUpEmail"
        android:layout_width="313dp"
        android:layout_height="42dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/background_box"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:hint="Your Email"
        android:inputType="textEmailAddress"
        android:textColor="#121212"
        android:textColorHint="#80121212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle_SignUpPage" />

    <EditText
        android:id="@+id/userSignUpPassword"
        android:layout_width="311dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_box"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:hint="Your Password"
        android:inputType="textPassword"
        android:textColor="#121212"
        android:textColorHint="#80121212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userSignUpEmail" />

    <EditText
        android:id="@+id/userSignUpConfirmPassword"
        android:layout_width="311dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_box"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#121212"
        android:textColorHint="#80121212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userSignUpPassword" />

    <TextView
        android:id="@+id/HaveAccount"
        android:layout_width="83dp"
        android:layout_height="17dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:text="Have an account?"
        android:textColor="#121212"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResetPassword" />

    <TextView
        android:id="@+id/signUpTextNavigationToLoginPage"
        android:layout_width="71dp"
        android:layout_height="17dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="126dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:onClick="onLoginTextClicked"
        android:text="Login Here"
        android:textColor="#1F83F8"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/HaveAccount"
        app:layout_constraintTop_toBottomOf="@+id/resetPasswordTextNavigationToResetPasswordPage" />

    <TextView
        android:id="@+id/ResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textColor="#121212"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userSignUpConfirmPassword" />

    <TextView
        android:id="@+id/resetPasswordTextNavigationToResetPasswordPage"
        android:layout_width="72dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="128dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/lalezar_regular"
        android:gravity="center"
        android:onClick="onResetPasswordTextClicked"
        android:text="Reset Password"
        android:textColor="#1F83F8"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ResetPassword"
        app:layout_constraintTop_toBottomOf="@+id/userSignUpConfirmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>